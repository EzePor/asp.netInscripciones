@model Inscripciones.Models.DetalleInscripcion

@{
    ViewData["Title"] = "Create";
}

<h1 class="conten-crear">CREAR DETALLE DE INSCRIPCIÓN:</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Modalidadcursado" class="control-label"></label>
                <select asp-for="Modalidadcursado" asp-items="Html.GetEnumSelectList<ModalidadCursadoEnum>()" class="form-control"></select>
                <span asp-validation-for="Modalidadcursado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InscripcionId" class="control-label">Inscripción</label>
                <select asp-for="InscripcionId" class ="form-control" asp-items="ViewBag.Inscripcion"></select>
            </div>
            <div class="form-group">
                <label asp-for="MateriaId" class="control-label">Materia</label>
                <select asp-for="MateriaId" class ="form-control" asp-items="ViewBag.Materia"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="CREAR" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="volverLista" asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
